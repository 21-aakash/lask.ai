{
  "name": "experiment",
  "displayName": "Experiment",
  "description": "first extension",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.93.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:experiment.sidebarView",
    "onCommand:aiChatbot.fixCode",
    "onCommand:aiChatbot.addComments"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "aiChatbot.fixCode",
        "title": "Fix using Lask.AI",
        "category": "AI Code Fix"
      },
      {
        "command": "aiChatbot.addComments",
        "title": "Add Comments using Lask.AI",
        "category": "AI Code Commenting"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "experiment-sidebar",
          "title": "Chatbot",
          "icon": "resources/icon.png"
        }
      ]
    },
    "menus": {
      "editor/context": [
        {
          "command": "aiChatbot.fixCode",
          "when": "editorHasSelection"
        },
        {
          "command": "aiChatbot.addComments",
          "when": "editorHasSelection"
        }
      ]
    },
    "views": {
      "experiment-sidebar": [
        {
          "id": "experiment.sidebarView",
          "name": "Lask.AI",
          "type": "webview"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.93.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.9.1"
  },
  "dependencies": {
    "axios": "^1.7.7",
    "dotenv": "^16.4.5",
    "groq": "^3.57.4",
    "groq-sdk": "^0.7.0"
  }
}
